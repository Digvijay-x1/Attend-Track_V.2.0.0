<%- include('navbar') %>    

<div class="md:ml-64 sm:ml-0 bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto p-6">
        <!-- Mobile Menu Toggle (only visible on small screens) -->
        <div class="sm:block md:hidden mb-4">
            <button id="mobile-menu-toggle" class="p-2 rounded-md bg-white shadow">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
                </svg>
            </button>
        </div>

        <!-- Header -->
        <div class="flex justify-between items-center mb-6">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Alerts</h1>
                <p class="text-gray-600 mt-1">Stay informed about your attendance status and important notifications</p>
            </div>
            <div class="flex items-center gap-4">
                <button id="mark-all-read" class="text-blue-600 hover:text-blue-800 font-medium">
                    Mark All as Read
                </button>
                <button id="settings-button" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center gap-2 text-sm font-medium">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    Settings
                </button>
            </div>
        </div>

        <!-- Alert Summary Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <!-- Critical Alerts -->
            <div class="bg-red-50 rounded-xl p-6 border border-red-100 relative overflow-hidden">
                <div class="flex items-center justify-between mb-4">
                    <div>
                        <h2 class="text-4xl font-bold text-gray-900"><%= alertCounts.critical %></h2>
                        <p class="text-gray-700 font-medium">Critical Alerts</p>
                    </div>
                    <div class="w-10 h-10 bg-red-100 rounded-full flex items-center justify-center">
                        <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                        </svg>
                    </div>
                </div>
                <p class="text-sm text-gray-600">Below 75% threshold</p>
            </div>

            <!-- Warning Alerts -->
            <div class="bg-yellow-50 rounded-xl p-6 border border-yellow-100 relative overflow-hidden">
                <div class="flex items-center justify-between mb-4">
                    <div>
                        <h2 class="text-4xl font-bold text-gray-900"><%= alertCounts.warning %></h2>
                        <p class="text-gray-700 font-medium">Warning Alerts</p>
                    </div>
                    <div class="w-10 h-10 bg-yellow-100 rounded-full flex items-center justify-center">
                        <svg class="w-6 h-6 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                        </svg>
                    </div>
                </div>
                <p class="text-sm text-gray-600">Close to threshold</p>
            </div>

            <!-- Info Alerts -->
            <div class="bg-blue-50 rounded-xl p-6 border border-blue-100 relative overflow-hidden">
                <div class="flex items-center justify-between mb-4">
                    <div>
                        <h2 class="text-4xl font-bold text-gray-900"><%= alertCounts.info %></h2>
                        <p class="text-gray-700 font-medium">Info Alerts</p>
                    </div>
                    <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                        <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                </div>
                <p class="text-sm text-gray-600">General updates</p>
            </div>

            <!-- Unread Alerts -->
            <div class="bg-gray-50 rounded-xl p-6 border border-gray-200 relative overflow-hidden">
                <div class="flex items-center justify-between mb-4">
                    <div>
                        <h2 class="text-4xl font-bold text-gray-900"><%= alertCounts.unread %></h2>
                        <p class="text-gray-700 font-medium">Unread</p>
                    </div>
                    <div class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center">
                        <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                        </svg>
                    </div>
                </div>
                <p class="text-sm text-gray-600">Require attention</p>
            </div>
        </div>

        <!-- Alert Tabs -->
        <div class="mb-6 border-b border-gray-200">
            <nav class="flex -mb-px">
                <a href="#" class="tab-link active-tab text-blue-600 border-b-2 border-blue-600 py-4 px-6 font-medium text-sm" data-tab="all">All Alerts</a>
                <a href="#" class="tab-link text-gray-500 hover:text-gray-700 py-4 px-6 font-medium text-sm" data-tab="critical">Critical</a>
                <a href="#" class="tab-link text-gray-500 hover:text-gray-700 py-4 px-6 font-medium text-sm" data-tab="warning">Warning</a>
                <a href="#" class="tab-link text-gray-500 hover:text-gray-700 py-4 px-6 font-medium text-sm" data-tab="info">Info</a>
                <a href="#" class="tab-link text-gray-500 hover:text-gray-700 py-4 px-6 font-medium text-sm" data-tab="unread">Unread</a>
            </nav>
        </div>

        <!-- Alert List -->
        <div class="space-y-4" id="alert-container">
            <% if (alerts.all.length === 0) { %>
                <div class="bg-white rounded-lg shadow-sm p-8 text-center">
                    <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <h3 class="text-xl font-medium text-gray-700 mb-2">No alerts to display</h3>
                    <p class="text-gray-500">You're all caught up! Check back later for new notifications.</p>
                </div>
            <% } else { %>
                <% alerts.all.forEach(function(alert) { %>
                    <div class="alert-item bg-white rounded-lg shadow-sm border border-gray-200 p-4 relative" data-type="<%= alert.type %>">
                        <div class="absolute left-0 top-0 bottom-0 w-1 <%= alert.type === 'critical' ? 'bg-red-500' : alert.type === 'warning' ? 'bg-yellow-500' : 'bg-blue-500' %> rounded-l-lg"></div>
                        <div class="flex items-start gap-4">
                            <div class="<%= alert.type === 'critical' ? 'bg-red-100' : alert.type === 'warning' ? 'bg-yellow-100' : 'bg-blue-100' %> p-3 rounded-full">
                                <svg class="w-6 h-6 <%= alert.type === 'critical' ? 'text-red-500' : alert.type === 'warning' ? 'text-yellow-500' : 'text-blue-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <% if (alert.type === 'info') { %>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    <% } else { %>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                                    <% } %>
                                </svg>
                            </div>
                            <div class="flex-1">
                                <div class="flex justify-between items-start">
                                    <div>
                                        <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
                                            <%= alert.title %>
                                            <span class="<%= alert.type === 'critical' ? 'bg-red-100 text-red-800' : alert.type === 'warning' ? 'bg-yellow-100 text-yellow-800' : 'bg-blue-100 text-blue-800' %> text-xs px-2 py-1 rounded-full font-medium">
                                                <%= alert.type.charAt(0).toUpperCase() + alert.type.slice(1) %>
                                            </span>
                                        </h3>
                                        <p class="text-gray-700 mt-1"><%= alert.message %></p>
                                    </div>
                                    <button class="text-gray-400 hover:text-gray-600 alert-dismiss">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                        </svg>
                                    </button>
                                </div>
                                <div class="mt-4 flex items-center justify-between">
                                    <div class="flex gap-2">
                                        <% if (alert.course) { %>
                                            <a href="/subjectManagement" class="text-blue-600 hover:text-blue-800 text-sm font-medium">View Subject</a>
                                            <a href="/calculator" class="<%= alert.type === 'critical' ? 'text-green-600 hover:text-green-800' : alert.type === 'warning' ? 'text-yellow-600 hover:text-yellow-800' : 'text-blue-600 hover:text-blue-800' %> text-sm font-medium">
                                                <%= alert.type === 'critical' ? 'Calculate Required' : alert.type === 'warning' ? 'Set Reminder' : 'View Details' %>
                                            </a>
                                        <% } else { %>
                                            <a href="/dashboard" class="text-blue-600 hover:text-blue-800 text-sm font-medium">View Dashboard</a>
                                            <a href="/calculator" class="text-green-600 hover:text-green-800 text-sm font-medium">Create Action Plan</a>
                                        <% } %>
                                    </div>
                                    <span class="text-sm text-gray-500">
                                        <%= formatTimeAgo(alert.timestamp) %>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</div>

<style>
/* Mobile responsiveness */
@media (max-width: 768px) {
    .ml-64 {
        margin-left: 0;
    }
    
    nav {
        display: none;
    }
    
    nav.block-mobile {
        display: block;
        position: fixed;
        z-index: 50;
        width: 100%;
        height: 100%;
    }
    
    nav.hidden-mobile {
        display: none;
    }
}

.tab-link {
    position: relative;
    transition: all 0.2s;
}

.tab-link.active-tab {
    border-bottom-width: 2px;
}

.tab-link:not(.active-tab) {
    border-bottom: 2px solid transparent;
}

.tab-link:hover:not(.active-tab) {
    border-bottom-color: #e5e7eb;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Mobile menu toggle functionality
    const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
    if (mobileMenuToggle) {
        mobileMenuToggle.addEventListener('click', function() {
            const sidebar = document.querySelector('nav');
            
            if (sidebar.classList.contains('hidden-mobile')) {
                sidebar.classList.remove('hidden-mobile');
                sidebar.classList.add('block-mobile');
            } else {
                sidebar.classList.add('hidden-mobile');
                sidebar.classList.remove('block-mobile');
            }
        });
    }

    // Tab functionality
    const tabLinks = document.querySelectorAll('.tab-link');
    const alertItems = document.querySelectorAll('.alert-item');
    
    tabLinks.forEach(tab => {
        tab.addEventListener('click', function(e) {
            e.preventDefault();
            
            // Remove active class from all tabs
            tabLinks.forEach(t => {
                t.classList.remove('active-tab');
                t.classList.remove('text-blue-600');
                t.classList.remove('border-blue-600');
                t.classList.add('text-gray-500');
            });
            
            // Add active class to clicked tab
            this.classList.add('active-tab');
            this.classList.add('text-blue-600');
            this.classList.add('border-blue-600');
            this.classList.remove('text-gray-500');
            
            // Filter alerts based on tab
            const tabType = this.getAttribute('data-tab');
            
            alertItems.forEach(item => {
                if (tabType === 'all' || item.getAttribute('data-type') === tabType || (tabType === 'unread' && !item.classList.contains('read'))) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
            
            // Show "no alerts" message if no alerts are visible
            const visibleAlerts = document.querySelectorAll('.alert-item[style="display: block"]');
            const alertContainer = document.getElementById('alert-container');
            
            if (visibleAlerts.length === 0 && alertItems.length > 0) {
                // Create "no alerts" message if it doesn't exist
                if (!document.getElementById('no-alerts-message')) {
                    const noAlertsMessage = document.createElement('div');
                    noAlertsMessage.id = 'no-alerts-message';
                    noAlertsMessage.className = 'bg-white rounded-lg shadow-sm p-8 text-center';
                    noAlertsMessage.innerHTML = `
                        <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <h3 class="text-xl font-medium text-gray-700 mb-2">No ${tabType} alerts</h3>
                        <p class="text-gray-500">You don't have any ${tabType} alerts at the moment.</p>
                    `;
                    alertContainer.appendChild(noAlertsMessage);
                }
            } else {
                // Remove "no alerts" message if it exists
                const noAlertsMessage = document.getElementById('no-alerts-message');
                if (noAlertsMessage) {
                    noAlertsMessage.remove();
                }
            }
        });
    });

    // Mark all as read functionality
    const markAllReadBtn = document.getElementById('mark-all-read');
    if (markAllReadBtn) {
        markAllReadBtn.addEventListener('click', function() {
            alertItems.forEach(item => {
                item.classList.add('read');
            });
            
            // Update unread count
            document.querySelector('.unread-count').textContent = '0';
        });
    }
    
    // Dismiss alert functionality
    const dismissButtons = document.querySelectorAll('.alert-dismiss');
    dismissButtons.forEach(button => {
        button.addEventListener('click', function() {
            const alert = this.closest('.alert-item');
            alert.classList.add('opacity-0');
            setTimeout(() => {
                alert.remove();
                
                // Check if there are any alerts left
                if (document.querySelectorAll('.alert-item').length === 0) {
                    const alertContainer = document.getElementById('alert-container');
                    const noAlertsMessage = document.createElement('div');
                    noAlertsMessage.className = 'bg-white rounded-lg shadow-sm p-8 text-center';
                    noAlertsMessage.innerHTML = `
                        <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <h3 class="text-xl font-medium text-gray-700 mb-2">No alerts to display</h3>
                        <p class="text-gray-500">You're all caught up! Check back later for new notifications.</p>
                    `;
                    alertContainer.appendChild(noAlertsMessage);
                }
            }, 300);
        });
    });
});
</script>
